<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Database Information -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://localhost:5432/testdb"/>
        <property name="username" value="postgres"/>
        <property name="password" value="rjcvjc6"/>
    </bean>

    <bean id="productCardDao" class="com.smarthouse.dao.impl.ProductCardDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="categoryDao" class="com.smarthouse.dao.impl.CategoryDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="visualizationDao" class="com.smarthouse.dao.impl.VisualizationDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="attributeNameDao" class="com.smarthouse.dao.impl.AttributeNameDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="attributeValueDao" class="com.smarthouse.dao.impl.AttributeValueDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="customerDao" class="com.smarthouse.dao.impl.CustomerDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="orderMainDao" class="com.smarthouse.dao.impl.OrderMainDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="orderItemDao" class="com.smarthouse.dao.impl.OrderItemDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

</beans>