<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:database.properties"/>

    <!-- Database Information -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

    <bean id="shopManager" class="com.smarthouse.service.ShopManager">
        <constructor-arg ref="productCardDao"/>
        <constructor-arg ref="customerDao"/>
        <constructor-arg ref="orderMainDao"/>
        <constructor-arg ref="orderItemDao"/>
    </bean>

    <bean id="productCardGetter" class="com.smarthouse.service.ProductCardGetter">
        <constructor-arg ref="productCardDao"/>
        <constructor-arg ref="categoryDao"/>
        <constructor-arg ref="visualizationDao"/>
        <constructor-arg ref="attributeValueDao"/>
    </bean>

    <bean id="productCardSorter" class="com.smarthouse.service.ProductCardSorter"/>

    <bean id="productCardDao" class="com.smarthouse.dao.impl.ProductCardDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="categoryDao" class="com.smarthouse.dao.impl.CategoryDaoImpl" parent="productCardDao"/>
    <bean id="visualizationDao" class="com.smarthouse.dao.impl.VisualizationDaoImpl" parent="productCardDao"/>
    <bean id="attributeNameDao" class="com.smarthouse.dao.impl.AttributeNameDaoImpl" parent="productCardDao"/>
    <bean id="attributeValueDao" class="com.smarthouse.dao.impl.AttributeValueDaoImpl" parent="productCardDao"/>
    <bean id="customerDao" class="com.smarthouse.dao.impl.CustomerDaoImpl" parent="productCardDao"/>
    <bean id="orderMainDao" class="com.smarthouse.dao.impl.OrderMainDaoImpl" parent="productCardDao"/>
    <bean id="orderItemDao" class="com.smarthouse.dao.impl.OrderItemDaoImpl" parent="productCardDao"/>

</beans>